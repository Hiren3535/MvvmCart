<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SLSPracticalTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tint</item>
        <item name="colorPrimaryVariant">@color/accent</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/tint</item>
        <item name="colorOnSecondary">@color/text_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!--App background-->
        <item name="android:windowBackground">@color/background</item>

        <!--Color for ripple of selected item bg-->
        <item name="colorControlHighlight">@color/color_ripple</item>
    </style>

    <style name="Theme.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:text">@string/lbl_best_furniture</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:paddingStart">@dimen/app_default_margin</item>
    </style>

    <style name="badge">
        <item name="android:layout_width">@dimen/_12sdp</item>
        <item name="android:layout_height">@dimen/_12sdp</item>
        <item name="android:layout_gravity">end|top</item>
        <item name="android:background">@drawable/red_badge</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:maxLength">2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_6sdp</item>
    </style>

    <style name="search_edit_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/app_default_margin</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:background">@drawable/bg_search</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">@dimen/_7sdp</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:hint">@string/hint_search</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:translationZ">4dp</item>
        <item name="android:importantForAutofill" tools:targetApi="o">no</item>
    </style>

    <style name="recyclerview_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">@dimen/app_default_margin</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/app_default_margin</item>
        <item name="fastScrollEnabled">true</item>
        <item name="fastScrollHorizontalThumbDrawable">@drawable/thumb_drawable</item>
        <item name="fastScrollHorizontalTrackDrawable">@drawable/line_drawable</item>
        <item name="fastScrollVerticalThumbDrawable">@drawable/thumb_drawable</item>
        <item name="fastScrollVerticalTrackDrawable">@drawable/line_drawable</item>
    </style>

    <style name="cart_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/background_secondary</item>
        <item name="cardCornerRadius">@dimen/default_corner_radius</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="normal_button" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingStart">@dimen/_6sdp</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingEnd">@dimen/_6sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="rippleColor">@color/white</item>
        <item name="cornerRadius">@dimen/default_corner_radius</item>
    </style>

    <style name="image_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/app_default_margin</item>
        <item name="android:layout_marginEnd">@dimen/app_default_margin</item>
        <item name="android:background">@drawable/bg_search</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:translationZ">4dp</item>
    </style>

    <style name="quantity_button" parent="normal_button">
        <item name="android:paddingStart">@dimen/_3sdp</item>
        <item name="android:paddingTop">@dimen/_3sdp</item>
        <item name="android:paddingEnd">@dimen/_3sdp</item>
        <item name="android:paddingBottom">@dimen/_3sdp</item>
        <item name="backgroundTint">@color/button_selector</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">@dimen/_11sdp</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="text_no_data">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:text">@string/no_data</item>
    </style>

    <style name="label_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="value_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/default_corner_radius</item>
    </style>

    <style name="inputLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="boxCornerRadiusTopEnd">@dimen/default_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/default_corner_radius</item>
        <item name="hintTextColor">@color/text_secondary</item>
    </style>

</resources>